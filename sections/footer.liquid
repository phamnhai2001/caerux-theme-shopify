{{ 'footer.css' | asset_url | stylesheet_tag  }}

<footer id="footer" class="color-{{ section.settings.color_scheme }} gradient">
    {%- if section.settings.newsletter_enable or section.settings.show_social -%}
    <div class="inner">
        <div class="container">
            <div class="subscribe">
                <div class="content_sub">
                    <div class="ttl_desp">
                        <h3>NEWSLETTER</h3>
                    </div>
                    <div class="txt_desp">
                        <p>
                          {{section.settings.footer_description}}
                        </p>
                    </div>
                  {%- if section.settings.newsletter_enable -%}
                    <div class="form_sub">
                        {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
                            <input type="email" placeholder="your@email.address" name=[contact[Email]] required>
                            <button type="submit">
                                <img src="{{'envelope-regular-24.png' | asset_url }}" alt="Submit">
                            </button>
                        {%- endform -%}
                    </div>
                   {%- endif -%}
                  {%- if section.settings.show_social -%}
                    <div class="social_icon">
                        <ul>
                          {%- if settings.social_facebook_link != blank -%}
                            <li>
                                <a href="{{ settings.social_facebook_link }}">
                                    <img src="{{'btn_share_fb.png' | asset_url }}" alt="Facebook">
                                </a>
                            </li>
                          {%- endif -%}
                          {%- if settings.social_instagram_link != blank -%}
                            <li>
                                <a href="{{ settings.social_instagram_link }}">
                                    <img src="{{'btn_share_insta.png' | asset_url }}" alt="Instagram">
                                </a>
                            </li>
                           {%- endif -%}
                           {%- if settings.social_twitter_link != blank -%}
                            <li>
                                <a href="{{ settings.social_twitter_link }}">
                                    <img src="{{'btn_share_twitter.png' | asset_url }}" alt="Twitter">
                                </a>
                            </li>
                            {%- endif -%}
                        </ul>
                    </div>
                  {%- endif -%}
                </div>
            </div>
            <div class="category">
                <ul>
                    <li>
                        <div class="ttl_category">
                            {%- if block.settings.heading != blank -%}
                <h3 class="footer-block__heading">{{- block.settings.heading | escape -}}</h3>
              {%- endif -%}
                        </div>
                        <div class="txt_category">
                            <p>Ha Noi</p>
                            <p>Ho Chi Minh</p>
                            <p>Da Nang</p>
                            <p>Hai Phong</p>
                        </div>
                    </li>
                    <li>
                        <div class="ttl_category">
                            <h3>EXPLORE</h3>
                        </div>
                          {%- assign footer_linklist = section.settings.footer_linklist -%}
                          {% if linklists[footer_linklist].links.size > 0 %}
                            <div class="txt_category">
                              {% for link in linklists[footer_linklist].links %}
                                <p>
                                  <a href="{{ link.url }}">
                                  {{ link.title }}
                                  </a>
                                    </p>
                              {% endfor %}
                          	</div>
                          {% endif %}
                    </li>
                    <li>
                        <div class="ttl_category">
                            <h3>BLOGS</h3>
                        </div>
                        <div class="txt_category">
                            <p>News</p>
                            <p>Fashion</p>
                            <p>Event</p>
                            <p>Promotion</p>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    {%- endif -%}
    <div class="copyright">
        <div class="container">
             <div class="footer__column footer__localization">
                    {%- if section.settings.enable_country_selector and localization.available_countries.size > 1 -%}
                      <localization-form>
                        {% form 'localization' %}
                          <div class="disclosure">
                            <h2 class="visually-hidden" id="FooterCountryLabelNoScript">{{ 'localization.country_label' | t }}</h2>
                            <button type="button" class="disclosure__button" aria-expanded="false" aria-controls="CountryList">
                              {{ localization.country.name }} ({{ localization.country.currency.iso_code }} {{ localization.country.currency.symbol }})
                            </button>
                            <ul id="CountryList" role="list" class="disclosure__list" hidden>
                              {% for country in localization.available_countries %}
                                <li class="disclosure__item" tabindex="-1">
                                  <a href="#"{% if country.iso_code == localization.country.iso_code %} aria-current="true"{% endif %} data-value="{{ country.iso_code }}">
                                    {{ country.name }} ({{ country.currency.iso_code }} {{ country.currency.symbol }})
                                  </a>
                                </li>
                              {% endfor %}
                            </ul>
                            <input type="hidden" name="country_code" value="{{ localization.country.iso_code }}">
                          </div>
                        {% endform %}
                      </localization-form>
                    {%- endif -%}

                    {%- if section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
                      <localization-form>
                        {% form 'localization' %}
                          <div class="disclosure">
                            <h2 class="caption-large text-body" id="FooterCountryLabel">{{ 'localization.country_label' | t }}</h2>
                            <button type="button" class="disclosure__button" aria-expanded="false" aria-controls="LanguageList">
                              {{ localization.language.endonym_name | capitalize }}
                            </button>
                            <ul id="LanguageList" role="list" class="disclosure__list" hidden>
                              {% for language in localization.available_languages %}
                                <li class="disclosure__item" tabindex="-1">
                                  <a href="#"{% if language.iso_code == localization.language.iso_code %} aria-current="true"{% endif %} hreflang="{{ language.iso_code }}" lang="{{ language.iso_code }}" data-value="{{ language.iso_code }}">
                                    {{ language.endonym_name | capitalize }}
                                  </a>
                                </li>
                              {% endfor %}
                            </ul>
                            <input type="hidden" name="language_code" value="{{ localization.language.iso_code }}">
                          </div>
                        {% endform %}
                      </localization-form>
                    {% endif %}

      			</div>
            <div class="footer__column footer__column--info">
              {%- if section.settings.payment_enable -%}
                <div class="footer__payment">
                  <ul class="list list-payment" role="list">
                    {%- for type in shop.enabled_payment_types -%}
                      <li class="list-payment__item">
                        {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                      </li>
                    {%- endfor -%}
                  </ul>
                </div>
              {%- endif -%}
              <div class="footer__copyright caption">
                <small class="copyright__content">&copy; {{ 'now' | date: "%Y" }}, {{ shop.name | link_to: routes.root_url }}</small>
                <small class="copyright__content">{{ powered_by_link }}</small>
              </div>
            </div>
        </div>
    </div>
</footer>
{% javascript %}
  
  class LocalizationForm extends HTMLElement {
  constructor() {
    super();
    this.elements = {
      input: this.querySelector('input[name="language_code"], input[name="country_code"]'),
      button: this.querySelector('button'),
      panel: this.querySelector('ul'),
    };
    this.elements.button.addEventListener('click', this.openSelector.bind(this));
    this.elements.button.addEventListener('focusout', this.closeSelector.bind(this));
    this.addEventListener('keyup', this.onContainerKeyUp.bind(this));

    this.querySelectorAll('a').forEach(item => item.addEventListener('click', this.onItemClick.bind(this)));
  }

  hidePanel() {
    this.elements.button.setAttribute('aria-expanded', 'false');
    this.elements.panel.setAttribute('hidden', true);
  }

  onContainerKeyUp(event) {
    if (event.code.toUpperCase() !== 'ESCAPE') return;

    this.hidePanel();
    this.elements.button.focus();
  }

  onItemClick(event) {
    event.preventDefault();
    const form = this.querySelector('form');
    this.elements.input.value = event.currentTarget.dataset.value;
    if (form) form.submit();
  }

  openSelector() {
    this.elements.button.focus();
    this.elements.panel.toggleAttribute('hidden');
    this.elements.button.setAttribute('aria-expanded', (this.elements.button.getAttribute('aria-expanded') === 'false').toString());
  }

  closeSelector(event) {
    const shouldClose = event.relatedTarget && event.relatedTarget.nodeName === 'BUTTON';
    if (event.relatedTarget === null || shouldClose) {
      this.hidePanel();
    }
  }
}

customElements.define('localization-form', LocalizationForm);

{% endjavascript %}
