<link rel="stylesheet" href="{{ 'footer.css' | asset_url }}" media="print" onload="this.media='all'">

<footer id="footer">
    <div class="inner">
        <div class="container">
            <div class="subscribe">
                <div class="content_sub">
                    <div class="ttl_desp">
                        <h3>NEWSLETTER</h3>
                    </div>
                    <div class="txt_desp">
                        <p>Enter your address to get $20 off your first orders</p>
                    </div>
                    <div class="form_sub">
                        <form action="">
                            <input type="email" placeholder="your@email.address">
                            <button type="submit">
                                <img src="{{'envelope-regular-24.png' | asset_url }}" alt="">
                            </button>
                        </form>
                    </div>
                    <div class="social_icon">
                        <ul>
                            <li>
                                <a href="">
                                    <i class="fab fa-instagram"></i>
                                </a>
                            </li>
                            <li>
                                <a href="">
                                    <i class="fab fa-twitter"></i>
                                </a>
                            </li>
                            <li>
                                <a href="">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                            </li>
                            <li>
                                <a href="">
                                    <i class="fab fa-google-plus-g"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="category">
                <ul>
                    <li>
                        <div class="ttl_category">
                            <h3>ADDRESS</h3>
                        </div>
                        <div class="txt_category">
                            <p>Ha Noi</p>
                            <p>Ho Chi Minh</p>
                            <p>Da Nang</p>
                            <p>Hai Phong</p>
                        </div>
                    </li>
                    <li>
                        <div class="ttl_category">
                            <h3>EXPLORE</h3>
                        </div>
                        <div class="txt_category">
                            <p>Home</p>
                            <p>Conlection</p>
                            <p>About us</p>
                            <p>Contact</p>
                        </div>
                    </li>
                    <li>
                        <div class="ttl_category">
                            <h3>BLOGS</h3>
                        </div>
                        <div class="txt_category">
                            <p>News</p>
                            <p>Fashion</p>
                            <p>Event</p>
                            <p>Promotion</p>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="copyright">
        <div class="container">
            <div class="logo">
                <img src="{{'logo.png' | asset_url }}" alt="">
                <div class="txt_desp">
                    <p>@2022 Shopify. All Right Reserved</p>
                </div>
            </div>
            <div class="time">
                <p>Opening Hour: <span>9:00 am</span> - <span>8:00 pm</span></p>
            </div>
        </div>
    </div>
</footer>

{% schema %}
{
    "name": "Footer",
	"tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "footer_description",
            "label": "Text description"
        }
    ]
}
{% endschema %}