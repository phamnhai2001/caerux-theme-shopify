<section class="section" id="banner">
    <div class="inner">
        <div class="slider_top">
            <div class="slider_item fade">
                <div class="thumb">
                    <img src="assets/images/01.jpg" alt="">
                </div>
                <div class="txt_desp">
                    <div class="desp_content">
                        <h3>The Title Banner Top 01</h3>
                        <div class="btn_shop">
                            <a href="#">Shop now</a>
                            <img src="assets/images/arrow-right.svg" alt="">
                        </div>
                    </div>
                </div>
            </div>
            <div class="slider_item fade">
                <div class="thumb">
                    <img src="assets/images/02.png" alt="">
                </div>
                <div class="txt_desp">
                    <div class="desp_content">
                        <h3>The Title Banner Top 02</h3>
                        <div class="btn_shop">
                            <a href="#">Shop now!</a>
                            <img src="assets/images/arrow-right.svg" alt="">
                        </div>
                    </div>
                </div>
            </div>
            <div class="slider_item fade">
                <div class="thumb">
                    <img src="assets/images/03.png" alt="">
                </div>
                <div class="txt_desp">
                    <div class="desp_content">
                        <h3>The Title Banner Top 03</h3>
                        <div class="btn_shop">
                            <a href="#">Shop now!</a>
                            <img src="assets/images/arrow-right.svg" alt="">
                        </div>
                    </div>
                </div>
            </div>
            <div class="prev_next">
                <a class="prev" onclick="plusSlides(-1)">
                    <img src="assets/images/arrow-left.svg" alt="">
                </a>
                <a class="next" onclick="plusSlides(1)">
                    <img src="assets/images/arrow-right.svg" alt="">
                </a>
            </div>
            <div class="slider_dot">
                <span class="dot_" onclick="currentSlide(1)"></span>
                <span class="dot_" onclick="currentSlide(2)"></span>
                <span class="dot_" onclick="currentSlide(3)"></span>
            </div>
        </div>
    </div>
</section>

