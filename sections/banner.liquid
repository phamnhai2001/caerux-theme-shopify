<script src="{{ 'main.js' | asset_url }}" defer="defer"></script>


<section class="section" id="banner">
    <div class="inner">
        <div class="slider_top">
            <div class="slider_item fade">
                <div class="thumb">
                    <img src="{{ '01.jpg' | asset_url }}" alt="">
                </div>
                <div class="txt_desp">
                    <div class="desp_content">
                        <h3>
                          {{block.settings.title}}
<!--                           The Title Banner Top 01 -->
                      </h3>
                        <div class="btn_shop">
                            <a href="#">Shop now</a>
                            <img src="{{'arrow-right.svg' | asset_url }}" alt="">
                        </div>
                    </div>
                </div>
            </div>
            <div class="slider_item fade">
                <div class="thumb">
                    <img src="{{'02.png' | asset_url }}" alt="">
                </div>
                <div class="txt_desp">
                    <div class="desp_content">
                        <h3>The Title Banner Top 02</h3>
                        <div class="btn_shop">
                            <a href="#">Shop now!</a>
                            <img src="{{'arrow-right.svg' | asset_url }}" alt="">
                        </div>
                    </div>
                </div>
            </div>
            <div class="slider_item fade">
                <div class="thumb">
                    <img src="{{'03.png' | asset_url }}" alt="">
                </div>
                <div class="txt_desp">
                    <div class="desp_content">
                        <h3>The Title Banner Top 03</h3>
                        <div class="btn_shop">
                            <a href="#">Shop now!</a>
                            <img src="{{'arrow-right.svg' | asset_url }}" alt="">
                        </div>
                    </div>
                </div>
            </div>
            <div class="prev_next">
                <a class="prev" onclick="plusSlides(-1)">
                    <img src="{{'arrow-left.svg' | asset_url }}" alt="">
                </a>
                <a class="next" onclick="plusSlides(1)">
                    <img src="{{'arrow-right.svg' | asset_url }}" alt="">
                </a>
            </div>
            <div class="slider_dot">
                <span class="dot_" onclick="currentSlide(1)"></span>
                <span class="dot_" onclick="currentSlide(2)"></span>
                <span class="dot_" onclick="currentSlide(3)"></span>
            </div>
        </div>
    </div>
</section>

