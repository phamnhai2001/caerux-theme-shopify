<script src="{{ 'main.js' | asset_url }}" defer="defer"></script>


<section class="section" id="banner">
    <div class="inner">
        <div class="slider_top">
           {% for block in section.blocks %}
            <div class="slider_item fade">
                <div class="thumb">
                    <div class="thumb">
                  <img  src="{{ block.settings.image | img_url: 'master'}}" alt="">
                </div>
                <div class="txt_desp">
                    <div class="desp_content">
                        <h3>{{ block.settings.title}}</h3>
                        <div class="btn_shop">
                            <a href="{{ routes.all_products_collection_url }}">Shop now!</a>
                            <img src="{{'chevron-right-regular-24.png' | asset_url }}" alt="">
                        </div>
                    </div>
                </div>
            </div>
              </div>
            {% endfor %}
            <div class="prev_next">
                <a class="prev" onclick="plusSlides(-1)">
                    <img src="{{'chevron-left-regular-24.png' | asset_url }}" alt="">
                </a>
                <a class="next" onclick="plusSlides(1)">
                    <img src="{{'chevron-right-regular-24.png' | asset_url }}" alt="">
                </a>
            </div>
            

            <div class="slider_dot">
                <span class="dot_" onclick="currentSlide(1)"></span>
                <span class="dot_" onclick="currentSlide(2)"></span>
                <span class="dot_" onclick="currentSlide(3)"></span>
            </div>
        </div>
    </div>
</section>

{% schema %}
{
  "name": "Banner slider",
  "max_blocks": 3,
  "settings": [
    
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label":"Title"
        }
      ]
    }
  ]
}
{% endschema %}

