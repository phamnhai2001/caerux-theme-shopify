<script src="{{ 'product_detail.js' | asset_url }}" defer="defer"></script>
{%- style -%}
	.row .column img {
		width: 100px;
        height: 85px;
        object-fit: cover;
	}
	.spr-content {
		display: flex;
    	justify-content: space-between;
	}
	.spr-form {
		width: 40%;
		border-top: none;
	}
  .spr-form>form {
		text-align: left;
  }
	#shopify-product-reviews {
		max-width: 1200px;
		margin: 0 auto;
	}
  .spr-button-primary{
		padding: 10px;
    background-color: black;
    color: white;
    border: none;
	float: none;
  }
.spr-review {
border-top: none;
text-align: left;
}
.spr-review-header-title {
	font-weight: 600;
}
.spr-reviews {
	width: 50%;
}
.spr-header-title {
	font-weight: 600;
}
.spr-header {
	text-align: center;
}
{%- endstyle -%}
<div id="wrapper_product">
        <div class="inner">
            <section class="section" id="product">
                <div class="inner">
                    <div class="product_grid">
                        <div class="product_images">
                            <div class="container">
                              {% for image in product.images %}
                                <div class="item">
                                    <a class="lightbox" href="#{{image.position}}">
                                        <img src="{{ image | image_url }}" alt="">
                                        <button class="zoom_in">
                                            <img class="icon_zoom" src="{{ 'zoom-in.png' | asset_url }}" alt="">
                                        </button>
                                    </a>
                                    <div class="lightbox-target" id="{{image.position}}">
	                                     <img src="{{ image | image_url }}" >   
                                        <a class="lightbox-close" href="#">
                                        </a>
                                    </div>
                                </div>
                              {% endfor %}
                                <div class="row">
                                  {% for image in product.images %}
                                    <div class="column">
                                        <img class="image" src="{{ image | image_url }}" onclick="currentSlide({{image.position}})"
                                            alt="">
                                    </div>
                                   {% endfor %}
                                </div>
                            </div>
                        </div>
                        <div class="product_details">
                            <div class="txt_desp">
                                <h1 class="name">{{product.title}}</h1>
                                <p class="price">{{product.price}}</p>
                            </div>
                            <div class="color">
                                <p>Color</p>
                                <div class="color_wrapper">
                                   {% for color_option in product.options_by_name['Color'].values %}
                                    <div class="color_item">
                                        <input type="radio" name="color" id="{{ color_option }}">
                                        <label for="{{ color_option }}">{{ color_option }}</label>
                                    </div>
                                  {% endfor %}
                                </div>
                            </div>
                            <div class="quantity">
                                <p>{{ 'products.product.quantity.label' | t }}</p>
                                <div class="btn_quantity">
                                    <button class="minus_btn">-</button>
                                    <input type="number" id="quantity" value="1" min="1" >
                                    <button class="plus_btn">+</button>
                                </div>
                            </div>
                            <div class="btn">
                                <button id="cart_view" type="submit" class="add_cart">
                                    Add to cart
                                </button>
                                <form action="">
                                    <button type="submit" class="btn_buy">Buy now</button>
                                </form>
                            </div>
                            <div class="txt_note">
                              <p>{{section.settings.text}} </p>
                            </div>
                            <div class="social_icon">
                                <ul>
                                    <li>
                                        <a href="">
                                            <img src="{{'facebook_icon.png' | asset_url }}" alt="">
                                        </a>
                                    </li>
                                    <li>
                                        <a href="">
                                            <img src="{{'linkedin_icon.png' | asset_url }}" alt="">
                                        </a>
                                    </li>
                                    <li>
                                        <a href="">
                                            <img src="{{'twitter_icon.png' | asset_url }}" alt="">
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    {% render 'cart-notification' %}
                </div>
            </section>
            
        </div>
    </div>
{% schema %}
{
	"name": "main-product",
	"tag": "section",
	"blocks": [
    	{
          "type": "@app"
        },
		{
          "type": "title",
          "name": "title",
          "limit": 1
        },
        {
          "type": "price",
          "name": "price",
          "limit": 1
        },
		{
			"type": "color",
			"name": "Color"
		},
        {
          "type": "quantity_selector",
          "name": "quantity_selector",
          "limit": 1
        },
		{
          "type": "buy_buttons",
          "name": "buy_buttons",
          "limit": 1
    	},
		{
          "type": "description",
          "name": "description",
          "limit": 1
        }
	],
    "settings": [
		{
			"type": "text",
			"id": "text",
			"label": "Text note"
		}
      ]
}
{% endschema %}