<link rel="stylesheet" href="{{ 'cart-notification.css' | asset_url }}" media="print" onload="this.media='all'">
<script src="{{ 'cart-notification.js' | asset_url }}" defer="defer"></script>
<header id="header" class="header">
    <div class="inner">
        <div class="header_top">
            <div class="header_top_content">
                <div class="header_description">
                    {{section.settings.description }}
                </div>
                <ul class="header_top_nav">
                    <li class="util_pc"><a href="register.html">Registration</a></li>
                    <li class="util_pc">
                      
                      <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}">
                        Login
                        <span class="visually-hidden">
                          {%- liquid
                            if customer
                              echo 'customer.account_fallback' | t
                            else
                              echo 'customer.log_in' | t
                            endif
                          -%}
                        </span>
                      </a>
                  	</li>
                    <li id="header_upper-search">
                        <div id="header_upper_search_form" class="search_content">
                            <form role="search" method="get" action="">
                                <input id="header_upper_search__input" name="s" type="text" value="">
                                <button class="p-header__upper-search__submit icon_button">
                                </button>
                            </form>
                        </div>
                        <button id="btn">
                            <img src="{{ 'icon_search.svg' | asset_url }}" alt="">
                        </button>
                    </li>
                    <li class="header_welcart_cart">
                        <a class="header_cart" href="{{ routes.cart_url }}"><span class="header_welcart_cart_label">Cart</span>
                            <span class="header_welcart_cart_badge">
                                <img src="{{ 'cart.svg' | asset_url }}" alt="">
                              {{ cart.item_count }}
                            </span>
                          
                        </a>
                        <div class="header_view_cart" id="header_view_cart">
                            <p class="wc_empty_cart">There are no items in the cart right now.</p>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <div class="header_main">
            <div class="header_main_inner">
                <h1 class="header_logo">
                    <a href="#">
                        {%- if section.settings.logo != blank -%}
                            <img srcset="{{ section.settings.logo | img_url}}",
                            src="{{ section.settings.logo | img_url }}"
                            alt="">
                        {%- else -%}
                            <img src="{{ 'logo.png' | asset_url }}" alt="">
                        {%- endif -%}
                    </a>
                </h1>
                <div class="header_main_nav">
                    {%- if section.settings.menu != blank -%}
                    <nav class="global_nav_container" role="navigation">
                        <div id="menuToggle">
                            <div id="nav_toggle">
                                <div>
                                    <span></span>
                                    <span></span>
                                    <span></span>
                                </div>
                            </div>
                            <div id="nav_bg"></div>
                            <div id="global_nav">
                                <div class="header_logo util_sp">
                                    <a href="#">
                                        <img src="assets/images/logo.png" alt="">
                                    </a>
                                </div>
                                <ul class="list_menu">
                                    {%- for link in section.settings.menu.links -%}

                                    <li class="item_menu">
                                        <a href="{{ link.url }}">{{ link.title | escape }} </a>
                                    </li>
                                    {%- endfor -%}

                                    <li class="util_sp"><a href="#">Registration</a></li>
                                    <li class="util_sp"><a href="#">Login</a></li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                    {%- endif -%}
                </div>
            </div>
        </div>
    </div>
</header>
{% render 'cart-notification' %}

{% schema %}
    {
    "name": "Header",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "description",
            "label": "Text description"
        },
        {
            "type": "link_list",
            "id": "menu",
            "label": "Menu"
        },
        {
            "type": "image_picker",
            "id": "logo",
            "label": "Logo"
        }
        ],
        "blocks": [
            {
            "name": "image icon",
            "type": "header",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                }
            ]
            }
        ]
    }
{% endschema %}