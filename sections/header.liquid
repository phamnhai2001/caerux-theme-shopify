<link rel="stylesheet" href="{{ 'header.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'cart-notification.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'header.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'cart-notification.css' | asset_url | stylesheet_tag }}</noscript>
<script src="{{ 'cart-notification.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'nav.js' | asset_url }}" defer="defer"></script>

<header id="header" class="header">
    <div class="inner">
        <div class="header_top">
            <div class="header_top_content">
                <div class="header_description">
                    {{section.settings.description }}
                </div>
                <ul class="header_top_nav">
                    <li class="util_pc">
                      
                      <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}">
                        <span class="visually-hidden">
                          {%- liquid
                            if customer
                              echo customer.name  
                            else
                              echo 'customer.log_in' | t
                            endif
                          -%}
                        </span>
                      </a>
                  	</li>
                    <li id="header_upper-search">
                        <div id="header_upper_search_form" class="search_content">
                            <form role="search" method="get" action="{{ routes.search_url }}" role="search" class="search search-modal__form">
                                <input id="header_upper_search__input" id="Search-In-Modal"
                                      type="search"
                                      name="q"
                                      value=""
                                      placeholder="{{ 'general.search.search' | t }}"
                                      {%- if settings.predictive_search_enabled -%}
                                        role="combobox"
                                        aria-expanded="false"
                                        aria-owns="predictive-search-results-list"
                                        aria-controls="predictive-search-results-list"
                                        aria-haspopup="listbox"
                                        aria-autocomplete="list"
                                        autocorrect="off"
                                        autocomplete="off"
                                        autocapitalize="off"
                                        spellcheck="false"
                                      {%- endif -%}>
                                <button class="p-header__upper-search__submit icon_button">
                                </button>
                            </form>
                        </div>
                        <button id="btn">
                            <img src="{{ 'icon_search.svg' | asset_url }}" alt="">
                        </button>
                    </li>
                    <li class="header_welcart_cart header__icons">
                        <a href="{{ routes.cart_url }}" class="header__icon header__icon--cart link focus-inset" id="cart-icon-bubble">
                            <span class="header_welcart_cart_badge">
                                    <img src="{{'cart.svg' | asset_url }}" alt="">
                            </span>
                            {%- if cart != empty -%}
                              <div class="cart-count-bubble">
                                {%- if cart.item_count < 100 -%}
                                  <span aria-hidden="true">{{ cart.item_count }}</span>
                                {%- endif -%}
                              </div>
                            {%- endif -%}
                         </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="header_main">
           		<nav>
                    <div class="logo">
                        <a href="{{ routes.root_url }}" class="logo">
                            {%- if section.settings.logo != blank -%}
                            <img srcset="{{ section.settings.logo | img_url}}",
                            src="{{ section.settings.logo | img_url }}"
                            alt="">
                        {%- else -%}
                            <img src="{{ 'logo.png' | asset_url }}" alt="">
                        {%- endif -%}
                        </a>
                    </div>
             		{%- if section.settings.menu != blank -%}
                    <div class="nav_main_top" id="menuToggle">
                        <div id="nav_toggle">
                            <div>
                                <span></span>
                                <span></span>
                                <span></span>
                            </div>
                        </div>
                        <div id="nav_bg"></div>
                        <div id="global_nav">
                            <div class="header_logo util_sp">
                                <a href="{{ routes.root_url }}">
                                {%- if section.settings.logo != blank -%}
                                    <img srcset="{{ section.settings.logo | img_url}}",
                                    src="{{ section.settings.logo | img_url }}"
                                    alt="">
                                {%- else -%}
                                    <img src="{{ 'logo.png' | asset_url }}" alt="">
                                {%- endif -%}
                              </a>
                            </div>
                            <ul class="list_menu">
                                    {%- for link in section.settings.menu.links -%}
                                      <li class="item_menu">
                                        	{%- if link.links != blank -%}
                                              <details-disclosure>
                                                <details id="Details-HeaderMenu-{{ forloop.index }}">
                                                  <summary class="header__menu-item list-menu__item link focus-inset">
                                                    <a href="{{ link.url }}" {%- if link.child_active %} class="header__active-menu-item"{% endif %}>{{ link.title | escape }}</a>
                                                    {% render 'icon-caret' %}
                                                  </summary>
                                                  <ul id="HeaderMenu-MenuList-{{ forloop.index }}" class="header__submenu list-menu list-menu--disclosure caption-large motion-reduce" role="list" tabindex="-1">
                                                    {%- for childlink in link.links -%}
                                                      <li class="item_child">
                                                        {%- if childlink.links == blank -%}
                                                          <a href="{{ childlink.url }}" class="header__menu-item list-menu__item link link--text focus-inset caption-large{% if childlink.current %} list-menu__item--active{% endif %}"{% if childlink.current %} aria-current="page"{% endif %}>
                                                            {{ childlink.title | escape }}
                                                          </a>
                                                        {%- else -%}
                                                          <details id="Details-HeaderSubMenu-{{ forloop.index }}">
                                                            <summary class="header__menu-item link link--text list-menu__item focus-inset caption-large">
                                                              {{ childlink.title | escape }}
                                                              {% render 'icon-caret' %}
                                                            </summary>
                                                            <ul id="HeaderMenu-SubMenuList-{{ forloop.index }}" class="header__submenu list-menu motion-reduce">
                                                              {%- for grandchildlink in childlink.links -%}
                                                                <li>
                                                                  <a href="{{ grandchildlink.url }}" class="header__menu-item list-menu__item link link--text focus-inset caption-large{% if grandchildlink.current %} list-menu__item--active{% endif %}"{% if grandchildlink.current %} aria-current="page"{% endif %}>
                                                                    {{ grandchildlink.title | escape }}
                                                                  </a>
                                                                </li>
                                                              {%- endfor -%}
                                                            </ul>
                                                          </details>
                                                        {%- endif -%}
                                                      </li>
                                                    {%- endfor -%}
                                                  </ul>
                                                </details>
                                              </details-disclosure>
                                            {%- else -%}
                                          		<a href="{{ link.url }}">{{ link.title | escape }} </a>
                  							{%- endif -%}
                                      </li>
                                    {%- endfor -%}
                                    <li class="util_sp">
                                  <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}">
                                    <span class="visually-hidden">
                                      {%- liquid
                                        if customer
                                          echo customer.name  
                                        else
                                          echo 'customer.log_in' | t
                                        endif
                                      -%}
                                    </span>
                                  </a>
                                  	</li>
                                </ul>
                        </div>
                    </div>
             		{%- endif -%}
                </nav>
        </div>
    </div>
</header>
{% render 'cart-notification' %}

{% schema %}
    {
    "name": "Header",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "description",
            "label": "Text description"
        },
        {
            "type": "link_list",
            "id": "menu",
            "label": "Menu"
        },
        {
            "type": "image_picker",
            "id": "logo",
            "label": "Logo"
        }
        ],
        "blocks": [
            {
            "name": "image icon",
            "type": "header",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                }
            ]
            }
        ]
    }
{% endschema %}