<div id="wrapper_product">
        <div class="inner">
			<section class="section" id="recommended">
                <div class="inner">
                    <div class="ttl_product">
                        <h3>{{section.settings.heading}}</h3>
                    </div>
                    <div class="list_item">
                        <ul id="list_recommend" data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}&limit=4">
                          {% if recommendations.performed %}
                          {% if recommendations.products_count > 0 %}
                            {% for product in recommendations.products %}
                            <li class="slide">
                                <a class="item_type" href="#">
                                    <div class="item_content">
                                        <div class="thumb">
                                            <img src="{{ product_card_product.featured_media | img_url }}" alt="">
                                        </div>
                                        <div class="txt_desp">
                                            <h3>ウォールシェルフ</h3>
                                            <p>$3000<span class="sold_out">Out stock</span></p>
                                        </div>
                                    </div>
                                </a>
                            </li>
                          	{% endfor %}
                          {% endif %}
                        {% else %}
                          <div class="placeholder">Placeholder animation</div>
                        {% endif %}
                        </ul>
                    </div>
                </div>
            </section>
  </div>
</div>

{% schema %}
{
	"name": "product-recommendations",
	"tag": "section",
	"settings": [
		{
			"type": "text",
			"id": "heading",
			"label": "Heading"
		}
	]
}
{% endschema %}