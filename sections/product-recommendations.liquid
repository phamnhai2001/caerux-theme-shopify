<div id="wrapper_product">
        <div class="inner">
			<section class="section" id="recommended">
                <div class="inner">
                    <div class="ttl_product">
                        <h3>{{section.settings.heading}}</h3>
                    </div>
                    <div class="list_item">
                        <ul id="list_recommend">
                          {% for product in collections[section.settings.feature_collection].products %}
                             <li class="slide">
                                <a class="item_type" href="{{ product.url }}">
                                    <div class="item_content">
                                        <div class="thumb">
                                               <img src="{{ product.featured_image | img_url: 'medium' | format: 'jpg' }}" alt="{{ block.settings.slide_heading }}">
                                        </div>
                                        <div class="txt_desp">
                                             <h3>{{ product.title }}</h3>

                                             <p>{{ product.price | money }}</p>
                                        </div>
                                    </div>
                                </a>
                            </li>
                          {% endfor %}
                        </ul>
                    </div>
                </div>
            </section>
  </div>
</div>

{% schema %}
{
	"name": "product-recommendations",
	"tag": "section",
	"settings": [
		{
			"type": "text",
			"id": "heading",
			"label": "Heading"
		},
		{
           "type": "collection",
           "id": "feature_collection",
           "label": "Chose Collection to show on slideshow"
         }
    ],
    "presets": [
       {
         "name": "Products Slideshow",
         "category": "collections"
       }
     ]
}
{% endschema %}