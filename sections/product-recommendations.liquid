<div id="wrapper_product">
        <div class="inner">
			<section class="section" id="recommended">
                <div class="inner">
                    <div class="ttl_product">
                        <h3>{{section.settings.heading}}</h3>
                    </div>
                    <div class="list_item">
                        <ul id="list_recommend">
                          	{% render 'render-products' for collections[section.settings.collection].products as product %}
						</ul>                       
                    </div>
                </div>
            </section>
  </div>
</div>

{% schema %}
{
	"name": "product-recommendations",
	"tag": "section",
	"settings": [
		{
			"type": "text",
			"id": "heading",
			"label": "Heading"
		},
		{
			"type": "collection",
			"id": "collection",
			"label": "Collection"
		}
	]
}
{% endschema %}