                </ul>
                <div class="prev_next">
                    <a class="prev" onclick="prev(this)">
                        <img src="{{'arrow-left.svg' | asset_url }}" alt="">
                    </a>
                    <a class="next" onclick="next(this)">
                        <img src="{{'arrow-right.svg' | asset_url }}" alt="">
                    </a>
                </div>
            </div>
        </div>
        <div class="banner_arrival">
            <div class="thumb">
              {%- if section.settings.image != blank -%}
                 	<img srcset="{{ section.settings.image | img_url}}",
                     src="{{ section.settings.image | img_url }}"
                     alt="">
               {%- else -%}
                 	<img src="{{'banner_arrival.jpg' | asset_url }}" alt="">
               {%- endif -%}
            </div>
            <div class="content">
                <div class="txt_desp">
                    <p>Original chair special feature</p>
                    <h2>
                      {{section.block.settings.heading}}
<!--                       Design Chair -->
                  	</h2>
                    <a class="banner_btn a_btn" href="#">
                        <span>Check the item</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

