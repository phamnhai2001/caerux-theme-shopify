<section class="section" id="new_arrival">
    <div class="inner">
        <h2 class="tlt_section">NEW ARRIVAL</h2>
        <div class="slider">
            <div class="list_item">
                <ul id="list_arrival">
                    <li class="slide">
                        <a class="item_type" href="product_detail.html">
                            <div class="item_content">
                                <div class="thumb">
                                    <img src="{{'img.jpg' | asset_url }}" alt="">
                                </div>
                                <div class="txt_desp">
                                    <h3>ウォールシェルフ</h3>
                                    <p>$3000<span class="sold_out">Out stock</span></p>
                                </div>
                            </div>
                        </a>
                    </li>
                    <li class="slide">
                        <a class="item_type" href="product_detail.html">
                            <div class="item_content">
                                <div class="thumb">
                                    <img src="{{'img.jpg' | asset_url }}" alt="">
                                </div>
                                <div class="txt_desp">
                                    <h3>ウォールシェルフ</h3>
                                    <p>$3000</p>
                                </div>
                            </div>
                        </a>
                    </li>
                    <li class="slide">
                        <a class="item_type" href="product_detail.html">
                            <div class="item_content">
                                <div class="thumb">
                                    <img src="{{'img.jpg' | asset_url }}" alt="">
                                </div>
                                <div class="txt_desp">
                                    <h3>ウォールシェルフ</h3>
                                    <p>$3000</p>
                                </div>
                            </div>
                        </a>
                    </li>
                    <li class="slide">
                        <a class="item_type" href="product_detail.html">
                            <div class="item_content">
                                <div class="thumb">
                                    <img src="{{'img.jpg' | asset_url }}" alt="">
                                </div>
                                <div class="txt_desp">
                                    <h3>ウォールシェルフ</h3>
                                    <p>$3000</p>
                                </div>
                            </div>
                        </a>
                    </li>
                    <li class="slide">
                        <a class="item_type" href="product_detail.html">
                            <div class="item_content">
                                <div class="thumb">
                                    <img src="{{'img.jpg' | asset_url }}" alt="">
                                </div>
                                <div class="txt_desp">
                                    <h3>ウォールシェルフ</h3>
                                    <p>$3000</p>
                                </div>
                            </div>
                        </a>
                    </li>
                </ul>
                <div class="prev_next">
                    <a class="prev" onclick="prev(this)">
                        <img src="{{'arrow-left.svg' | asset_url }}" alt="">
                    </a>
                    <a class="next" onclick="next(this)">
                        <img src="{{'arrow-right.svg' | asset_url }}" alt="">
                    </a>
                </div>
            </div>
        </div>
        <div class="banner_arrival">
            <div class="thumb">
              {%- if section.settings.image != blank -%}
                 	<img srcset="{{ section.settings.image | img_url}}",
                     src="{{ section.settings.image | img_url }}"
                     alt="">
               {%- else -%}
                 	<img src="{{'banner_arrival.jpg' | asset_url }}" alt="">
               {%- endif -%}
            </div>
            <div class="content">
               <div class="txt_desp">
               {%- for block in section.blocks -%}
        			{%- case block.type -%}
          				{%- when 'text' -%}
                              <p>
                                {{ block.settings.text | escape }}
                 			</p>
                 		{%- when 'heading' -%}
                              <h2>
                                {{ block.settings.heading | escape }}
                              </h2>
                         {%- when 'buttons' -%}
                              <a class="banner_btn a_btn" href="#">
                                  <span>
                                    {{ block.settings.button_label | escape }}
                                  </span>
                              </a>
              		{%- endcase -%}
      			{%- endfor -%}
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
{
  "name": "New arrival",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "image"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "heading",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "heading"
        }
      ]
    },
    {
      "type": "text",
      "name": "text",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "text"
        }
      ]
    },
    {
      "type": "buttons",
      "name": "buttons",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "New arrival",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        },
        {
          "type": "buttons"
        }
      ]
    }
  ]
}
{% endschema %}
