{% comment %}
    Renders cart notification

    Accepts:
    - color_scheme: {String} sets the color scheme of the notification (optional)

    Usage:
    {% render 'cart-notification' %}
{% endcomment %}					
				<div class="cart_notify" id="cart">
                        <div class="cart_header">
                            <div class="txt_desp">
                                <img src="assets/images/check_icon.png" alt="">
                                <p>Item added to your cart</p>
                            </div>
                            <button class="close" id="close">
                                <a href="">
                                    <img src="assets/images/close.png" alt="">
                                </a>
                            </button>
                        </div>
                        <div class="cart_product">

                        </div>
                        <div class="cart_links">
                            <a class="header_cart" href="{{ routes.cart_url }}">
                                <h3>View my cart</h3>
                                <span class="number">0</span>
                            </a>
                            <form action="{{ routes.cart_url }}" method="post">
                                <button class="checkout" type="submit">Check out</button>
                            </form>
                            <button class="continue_shopping">
                                Continue shopping
                            </button>
                        </div>
                    </div>