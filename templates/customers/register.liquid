{{ 'register.css' | asset_url | stylesheet_tag }}
<script src="{{ 'validator.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'register.js' | asset_url }}" defer="defer"></script>
<div id="wrapper" class="register">
    <div class="inner">
        <div class="upper">
            <div class="navi_top">
                <ul>
                    <li><a href="/"><img src="{{'home.png' | asset_url }}" alt="Home"></a></li>
                    <li><span class="current">{{ 'customer.register.title' | t }}</span></li>
                </ul>
            </div>
        </div>
        <section class="section" id="content">
            <div class="inner">
                <div class="register_wrapper">
                    <div class="register_form">
                        <h3>{{ 'customer.register.title' | t }}</h3>
                          {% form 'create_customer', id: 'register'%}
                            <ul>
                                <li>
                                    <input type="text" name="customer[first_name]" id="firstname" value="" placeholder="{{ 'customer.register.first_name' | t }}" class="lg_input" aria-invalid="true">
                                    <span class="form_message"></span>
                                </li>
                                <li>
                                    <input type="text" name="customer[last_name]" id="lastname" value="" placeholder="{{ 'customer.register.last_name' | t }}" class="lg_input" aria-invalid="true">
                                    <span class="form_message"></span>
                                </li>
                                <li>
                                    <input type="email" name="customer[email]" id="email" value="" placeholder="{{ 'customer.register.email' | t }}" class="lg_input" aria-invalid="true">
                                    <span class="form_message"></span>
                                </li>
                                <li>
                                    <input type="password" value="" name="customer[password]" id="password" placeholder="{{ 'customer.register.password' | t }}" class="lg_input">
                                    <span class="form_message"></span>
                                </li>
                            </ul>
                            <div class="btn_register">
                                <button type="submit" class="btn_register">{{ 'customer.register.submit' | t }}</button>
                                <p class="txt_confirm">
                                    <input type="checkbox" value="" id="policies">
                                    <label for="policies" class="checkbox normal">Omitting ID input from next time</label>
                                </p>
                            </div>
                           {% endform %}
                        <div class="rules_information">
                            <p>If you are a first-time user, please register as a member from here. E-mail address</p>
                            <p>There are the following merits when you register as a member.</p>
                            <p>1. We will send you the best deals in the e-mail newsletter to the registered e-mail address.</p>
                            <p>2. You will be able to use the like function. You can use the like function to save the products you want in your favorites list.</p>
                            <p>3. You can see the purchase history.</p>
                        </div>
                    </div>
            </div>
        </section>
    </div>
</div>


