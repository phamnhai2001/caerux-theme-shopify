<link rel="stylesheet" href="{{ 'login.css' | asset_url }}" media="print" onload="this.media='all'">
<script src="{{ 'validator.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'address.js' | asset_url }}" defer="defer"></script>
<div id="wrapper" class="address">
        <div class="inner">
            <div class="upper">
                <div class="navi_top">
                    <ul>
                        <li><a href="/"><img src="{{'bx-home.svg' | asset_url }}" alt=""></a></li>
                        <li><span class="current">{{ 'customer.addresses.title' | t }}</span></li>
                    </ul>
                </div>
            </div>
            <section class="section create_address edit_address">
                <div class="edit_content">
                    <div class="form_name">{{ 'customer.addresses.title' | t }}</div>
                    <div class="form_edit">
                        <form id="formAddress" action="">
                            <div class="form_item">
                                <div class="title">Name</div>
                                <div class="input_content name">
                                    <input id="first_name" type="text" name="address[first_name]" placeholder="Ultra">
                                    <input id="last_name" type="text" name="address[last_name]" placeholder="Taro">
                                    <span class="form_message"></span>
                                </div>
                            </div>
                            <div class="form_item">
                                <div class="title">{{ 'customer.addresses.company' | t }}</div>
                                <div class="input_content company">
                                    <input id="company" type="text" name="address[company_name]" placeholder="ULTRA_VYBE" value="{{ form.company }}">
                                    <span class="form_message"></span>
                                </div>
                            </div>
                            <div class="form_item">
                                <div class="title">Phone number</div>
                                <div class="input_content phone">
                                    <input id="first_block_phone_number" type="text" name="address[phone_number_block_1]" placeholder="03">
                                    <div class="peg"></div>
                                    <input id="second_block_phone_number" type="text" name="address[phone_number_block_2]" placeholder="1234">
                                    <div class="peg"></div>
                                    <input id="third_block_phone_number" type="text" name="address[phone_number_block_3]" placeholder="1234">
                                    <span class="form_message"></span>
                                </div>
                            </div>
                            <div class="form_item">
                                <div class="title">{{ 'customer.addresses.zip' | t }}</div>
                                <div class="input_content post_office">
                                    <input id="first_block_post_number" type="text" name="address[post_office_number_block_1]" placeholder="150">
                                    <div class="peg"></div>
                                    <input id="second_block_post_number" type="text" name="address[post_office_number_block_2]" placeholder="0011">
                                    <div class="search_address">Search for an address</div>
                                    <span class="form_message"></span>

                                </div>
                            </div>
                            <div class="form_item create_box_select">
                                <div class="title">{{ 'customer.addresses.country' | t }}</div>
                                <div id="box_check_option" class="input_content nation">
                                    <select id="select_box" class="box_select_sort box_select_create_address" name="address[country]" data-default="{{ form.country }}"
                						autocomplete="country">
                                      {{ all_country_option_tags }}
                                    </select>
                                </div>
                            </div>
                            <div class="form_item">
                                <div class="title">Municipalities </div>
                                <div class="input_content city">
                                    <input id="city" type="text" name="address[city]" placeholder="Shibuya Ward">
                                    <span class="form_message"></span>
                                </div>
                            </div>
                            <div class="form_item">
                                <div class="title">Address</div>
                                <div class="input_content street">
                                    <input id="street" type="text" name="address[street]" placeholder="East 1_28_9 1F">
                                    <span class="form_message"></span>
                                </div>
                            </div>
                            <div class="form_item">
                                <div class="input_content default_address">
                                    <input type="checkbox" value="" id="policy">
                                    <label for="policy" class="checkbox normal">Set this address as the default</label>
                                </div>
                            </div>
                            <input type="submit" class="update btn_short01" value="{{ 'customer.addresses.add' | t }}">
                            <a class="cancel" href="">{{ 'customer.addresses.cancel' | t }}</a>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </div>