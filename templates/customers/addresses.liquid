<link rel="stylesheet" href="{{ 'address.css' | asset_url }}" media="print" onload="this.media='all'">
<script src="{{ 'validator.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'address.js' | asset_url }}" defer="defer"></script>
{% style %}
	input[type=tel] {
	  width: 100%;
      height: 55px;
      border-radius: 5px;
      font-size: 12px;
      line-height: 20px;
      font-weight: 500;
      background-color: #fff;
      border: 1px solid #a6a4a4;
      color: #000;
      padding: 0 10px;
	}
.add {	
	background-color: black;
    color: white;
    padding: 13px 22px;
    border: none;
    cursor: pointer;
    font-size: 16px;
}
.add:hover {
	background-color: white;
    color: black;
    padding: 13px 22px;
    border: 1px solid;
    cursor: pointer;
    font-size: 16px;
}
button[type=reset] {
	margin-left: 15px;
    padding: 13px 32px;
    background: white;
    border: 1px solid;
    cursor: pointer;
}

{% endstyle %}
<div id="wrapper" class="address" data-customer-addresses>
        <div class="inner">
            <div class="upper">
                <div class="navi_top">
                    <ul>
                        <li><a href="/"><img src="{{'bx-home.svg' | asset_url }}" alt=""></a></li>
                        <li><span class="current">{{ 'customer.addresses.title' | t }}</span></li>
                    </ul>
                </div>
            </div>
          <div class="customer addresses" data-customer-addresses>
                <svg style="display: none">
                  <symbol id="icon-caret" viewBox="0 0 10 6">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor"/>
                  </symbol>
                </svg>
                <h1>{{ 'customer.addresses.title' | t }}</h1>
                <a href="{{ routes.account_url }}">
                  {{ 'customer.account.return' | t }}
                </a>
                <div data-address>
                  <button
                    type="button"
                    aria-expanded="false"
                    aria-controls="AddAddress"
                  >
                    {{ 'customer.addresses.add_new' | t }}
                  </button>
                  <div id="AddAddress">
                    <h2 id="AddressNewHeading">{{ 'customer.addresses.add_new' | t }}</h2>
                    <form action="">
                      <div class="field">
                        <label for="AddressFirstNameNew">Name</label>
                        <div>
                          <input type="text" id="AddressFirstNameNew" name="address[first_name]" value="{{ form.first_name }}" autocomplete="given-name" placeholder="{{ 'customer.addresses.first_name' | t }}">
                          <input type="text" id="AddressLastNameNew" name="address[last_name]" value="{{ form.last_name }}" autocomplete="family-name" placeholder="{{ 'customer.addresses.last_name' | t }}">
                        </div>
                      </div>
                      <div class="field">
                        <label for="AddressCompanyNew">{{ 'customer.addresses.company' | t }}</label>
                        <input type="text" id="AddressCompanyNew" name="address[company]" value="{{ form.company }}" autocomplete="organization" placeholder="{{ 'customer.addresses.company' | t }}">
                      </div>
                      <div class="field">
                        <label for="AddressAddress1New">Address</label>
                        <input type="text" id="AddressAddress1New" name="address[address1]" value="{{ form.address1 }}" autocomplete="address-line1" placeholder="{{ 'customer.addresses.address1' | t }}">
                      </div>
                      <div class="field">
                        <label for="AddressCityNew">{{ 'customer.addresses.city' | t }}</label>
                        <input type="text" id="AddressCityNew" name="address[city]" value="{{ form.city }}" autocomplete="address-level2" placeholder="{{ 'customer.addresses.city' | t }}">
                      </div>
                      <div class="country">
                        <label for="AddressCountryNew">{{ 'customer.addresses.country' | t }}</label>
                        <div class="select">
                          <select
                            id="AddressCountryNew"
                            name="address[country]"
                            data-default="{{ form.country }}"
                            autocomplete="country"
                          >
                            {{ all_country_option_tags }}
                          </select>
                          <svg aria-hidden="true" focusable="false" viewBox="0 0 10 6">
                            <use href="#icon-caret" />
                          </svg>
                        </div>
                      </div>
                      <div id="AddressProvinceContainerNew" style="display: none">
                        <label for="AddressProvinceNew">{{ 'customer.addresses.province' | t }}</label>
                        <div class="select">
                          <select
                            id="AddressProvinceNew"
                            name="address[province]"
                            data-default="{{ form.province }}"
                            autocomplete="address-level1"
                          >
                          </select>
                          <svg aria-hidden="true" focusable="false" viewBox="0 0 10 6">
                            <use href="#icon-caret" />
                          </svg>
                        </div>
                      </div>
                      <div class="field">
                        <label for="AddressZipNew">{{ 'customer.addresses.zip' | t }}</label>
                        <input type="text" id="AddressZipNew" name="address[zip]" value="{{ form.zip }}" autocapitalize="characters" autocomplete="postal-code" placeholder="{{ 'customer.addresses.zip' | t }}">
                      </div>
                      <div class="field">
                        <label for="AddressPhoneNew">Phone</label>
                        <input type="tel" id="AddressPhoneNew" name="address[phone]" value="{{ form.phone }}" autocomplete="tel" placeholder="{{ 'customer.addresses.phone' | t }}">
                      </div>
                      <div class="default_address">
                        {{ form.set_as_default_checkbox }}
                        <label for="address_default_address_new">{{ 'customer.addresses.set_default' | t }}</label>
                      </div>
                      <div class="btn">
                        <button>{{ 'customer.addresses.add' | t }}</button>
                        <button type="reset">{{ 'customer.addresses.cancel' | t }}</button>
                      </div>
                    </form>
                  </div>
                </div>
            
                <ul role="list">
                    <li data-address>
                        <h2>Address</h2>
                      <button
                        type="button"
                        id="EditFormButton_"
                        aria-label=""
                        aria-controls="EditAddress_"
                        aria-expanded="false"
                        data-address-id=""
                      >
                        Edit
                      </button>
                      <button
                        type="button"
                        aria-label=""
                        data-target=""
                        data-confirm-message=""
                      >
                        Delete
                      </button>
                      <div id="EditAddress_" class="edit">
                        <h2>Edit address</h2>
                        <form action="">
                          <div class="field">
                            <label for="AddressFirstName_">Name</label>
                            <div>
                              <input type="text" id="AddressFirstName_" name="address[first_name]" value="" autocomplete="given-name" placeholder="">
                              <input type="text" id="AddressLastName_" name="address[last_name]" value="" autocomplete="family-name" placeholder="">
                            </div>
                          </div>
                          <div class="field">
                            <label for="AddressCompany_">Company</label>
                            <input type="text" id="AddressCompany_" name="address[company]" value="" autocomplete="organization" placeholder="">
                          </div>
                          <div class="field">
                            <label for="AddressAddress1_">Address</label>
                            <input type="text" id="AddressAddress1_" name="address[address1]" value="" autocomplete="address-line1" placeholder="">
                          </div>
                          <div class="field">
                            <label for="AddressCity_">City</label>
                            <input type="text" id="AddressCity_" name="address[city]" value="" autocomplete="address-level2" placeholder="">
                          </div>
                          <div class="country">
                            <label for="AddressCountry_">
                              Country
                            </label>
                            <div class="select">
                              <select
                                id="AddressCountry_"
                                name="address[country]"
                                data-address-country-select
                                data-default=""
                                data-form-id=""
                                autocomplete="country"
                              >
                                <option value="">Ha Noi</option>
                                <option value="">Ho Chi Minh</option>
                              </select>
                              <svg aria-hidden="true" focusable="false" viewBox="0 0 10 6">
                                <use href="#icon-caret" />
                              </svg>
                            </div>
                          </div>
                          <div id="AddressProvinceContainer_{{ form.id }}" style="display:none;">
                            <label for="AddressProvince_{{ form.id }}">
                              {{ 'customer.addresses.province' | t }}
                            </label>
                            <div class="select">
                              <select
                                id="AddressProvince_{{ form.id }}"
                                name="address[province]"
                                data-default="{{ form.province }}"
                                autocomplete="address-level1"
                              >
                              </select>
                              <svg aria-hidden="true" focusable="false" viewBox="0 0 10 6">
                                <use href="#icon-caret" />
                              </svg>
                            </div>
                          </div>
                          <div class="field">
                            <label for="AddressZip_">Post code</label>
                            <input type="text" id="AddressZip_" name="address[zip]" value="" autocapitalize="characters" autocomplete="postal-code" placeholder="">
                          </div>
                          <div class="field">
                            <label for="AddressPhone_">Phone</label>
                            <input type="tel" id="AddressPhone_"  name="address[phone]" value="" autocomplete="tel" placeholder="">
                          </div>
                          <div class="default_address">
                            <label for="address_default_address_">
                              set as address default
                            </label>
                          </div>
                          <div class="btn">
                            <button>Update</button>
                            <button type="reset">Cancel</button>
                          </div>
                        </form>
                      </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>